<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommonMapper">
    <!--    MySQL 페이징: BoardMapper XML에서 selectBoardList의 LIMIT와 동일 -->
    <sql id="paging">
        LIMIT
        #{paginationInfo.firstRecordIndex},
        #{recordsPerPage}
    </sql>

    <!--    MySQL 검색   -->
    <sql id="search">
        <!-- 검색 키워드가 있을 때 -->
        <!-- 15번 라인의 if 문에서 검색 키워드가 파라미터로 넘어온 경우에만 쿼리 실행 -->
        <if test="searchKeyword != null and searchKeyword != ''">
            <choose>
                <!-- 검색 유형이 있을 때 -->
                <!-- 검색 유형이 파라미터로 넘어오면 19번 라인의 <choose> 안에 있는 각각의 <when> 조건에 알맞은 검색 유형을 기준으로 LIKE 쿼리를 실행 -->
                <!-- CONCAT(문자열1, 문자열2, ...) 함수: mySQL 내장함수. 괄호 안의 문자열들을 하나로 합쳐주는 역할. -->
                <when test="searchType != null and searchType != ''">
                    <choose>
                        <when test="'title'.equals(searchType)">
                            <!-- '%' == 와일드카드: 앞 뒤로 붙였기 때문에, 검색어가 문장의 앞이던 뒤던, 상관없이 포함만 되어있으면 검색됨. -->
                            <!-- #{searchKeyword}: Mybatis문법. 자바에서 보낸 searchKeyword변수를 할당. -->
                            AND title LIKE CONCAT('%', #{searchKeyword}, '%')
                        </when>
                        <when test="'content'.equals(searchType)">
                            AND content LIKE CONCAT('%', #{searchKeyword}, '%')
                        </when>
                        <when test="'writer'.equals(searchType)">
                            AND writer LIKE CONCAT('%', #{searchKeyword}, '%')
                        </when>
                    </choose>
                </when>
                <!-- 검색 유형이 없을 때 -->
                <!-- <otherwise> 안에 있는 쿼리는 검색 유형이 없을 때, 즉 제목, 작성자, 내용 전체에서 검색 키워드만으로 LIKE 쿼리를 실행-->
                <otherwise>
                    AND
                    (
                    title LIKE CONCAT('%', #{searchKeyword}, '%')
                    OR content LIKE CONCAT('%', #{searchKeyword}, '%')
                    OR writer LIKE CONCAT('%', #{searchKeyword}, '%')
                    )
                </otherwise>
            </choose>
        </if>


    </sql>
</mapper>